@using System.Web.Script.Serialization
<!DOCTYPE html>
<html>
<head>
    <meta lang="bg-BG"/>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="@Url.Content("~/content/favicon.ico")"/>
    <title>Shisha Kingdom - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
<div class="navbar navbar-default navbar-top" style="margin-bottom: 0px;">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Царството на\nнаргилетата", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Начало", "Index", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("За нас", "About", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Контакти", "Contact", "Home", new { area = "" }, null)</li>               
                <li>@Html.ActionLink("Продукти","All","Products", new { area = "" }, null)</li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Администрация<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Категории", "All", "Categories", new { area = "Administration" }, null)</li>
                        </ul>
                    </li>                   
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
    @Html.Action("SideMenu", "Navigation",new {area=""})
<div class="container body-content main" id="mainBody">
    <div class="container-fluid">
        @RenderBody()
    </div>
   
</div>
    <footer class="footer navbar-fixed-bottom navbar-default">
        <div class="container">
            <div class="navbar-header">
                <p class="navbar-brand" >&copy; @DateTime.Now.Year - Shisha Kingdom, Blvd. "Hristo Botev" 103, 1303 Sofia</p>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
<script src=@Url.Content("../../Content/sideMenuJs.js") type="text/javascript"></script>
    <script src=@Url.Content("../../Content/indexCarousel.js") type="text/javascript"></script>
</body>
</html>
