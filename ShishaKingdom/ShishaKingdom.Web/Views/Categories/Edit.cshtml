@model ShishaKingdom.Web.ViewModels.Categories.CategoryViewModel

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-12" style="padding-left: 0">
        <h4>Категория @Model.Name</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group col-md-10 col-sm-6">
            <div class="col-md-3">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-10 col-sm-6">
            <div class="col-md-10 col-sm-6">
                <input type="submit" value="Преименувай" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div class="col-md-3"style="padding-left: 0">
    <h2>Продукти</h2>
</div>

        <table class="table table-striped">
            <tr>
                <th>
                    Име
                </th>
                <th>
                    Цена
                </th>
                <th>
                    Наличност
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.ProductViewModels)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Available)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit","Products", new { id = item.Id },null) |
                        @Html.ActionLink("Details", "Details", "Products",new { id = item.Id },null) |
                        @Html.ActionLink("Delete", "Remove", "Products", new { id = item.Id },null)
                        @Html.ActionLink("Добави", "AddProduct", "Products", new { category = Model.Name }, null)
                    </td>
                </tr>
            }
        </table>
      



    <div>
        @Html.ActionLink("Към категориите", "All")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
