@using System.Web.Mvc.Ajax
@using System.Web.Mvc.Html
@model IEnumerable<Jitter.ViewModels.JeetViewModels.JeetViewModel>

@{
    ViewBag.Title = "All";
}

<h2>All</h2>

<p>
    <a href="/jeets/new"><button class="btn btn-success">Jeet something to the world!</button></a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostedOn)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostedOn)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<div id="bestJeet">
    @Ajax.ActionLink("Click here to see the best Jeet!",
        "BestJeet",
        null,
        new AjaxOptions()
        {
            UpdateTargetId = "bestJeet",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "GET"
        },
        new {@class="btn btn-primary"});
</div>

@section Scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}
